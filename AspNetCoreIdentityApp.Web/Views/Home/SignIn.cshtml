@model SignInVM
@{
    ViewData["Title"] = "SignIn";
}

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Üye Giriş</h2>

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input value="furkanumman@gmail.com" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input value="Password12*" class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>


            <div class="row">

                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" for="RememberMe" asp-for="RememberMe">Beni Hatırla</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum</a>
                </div>

            </div>

            <div class="d-flex" >

                <button class="mx-auto btn btn-primary" type="submit">Üye Giriş</button>

            </div>

        </form>

        <div class="d-flex">
            <a class="btn btn-info btn-block mx-auto my-2" asp-controller="Home" asp-action="FacebookSignIn">Facebook ile Üye Girişi</a>
        </div>

    </div>
</div>