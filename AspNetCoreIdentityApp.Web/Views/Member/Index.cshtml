@model UserVM
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6 offset-md-3 text-center">
        <user-picture-thumbnail class="rounded" style="width:200px" picture-url="@Model.PictureUrl" />
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Kullanıcı Bilgileri</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>E-Mail</th>
                    <th>Telefon No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>


    </div>

</div>
